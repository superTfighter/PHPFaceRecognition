{% extends 'app_simple.twig' %}

{% block script %}

	<script>

	function checkHash()
	{
		if(window.location.hash)
		{
			url = processHashId(window.location.hash);

			window.location.replace(url);
		}
		else
		{
			alfi_alert("Sikertelen bejelentkez√©s!", 'Figyelem!','danger');
		}
	}

	function processHashId(hash)
	{
		hash = hash.slice(1);
		data = hash.split("&");
		access_token = data[1].split("=")[1];

		url = '{{ path_for("tokenCheck" , { "token" : "asdasd123" }) }}';
		url = url.replace("asdasd123",access_token);

		return url;
	}

	checkHash();

	</script>

{% endblock %}