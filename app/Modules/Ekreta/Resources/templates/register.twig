{% extends 'app_simple.twig' %}

{% block page_content %}


	<div class="register-box">
		<div class="register-logo">
			Kréta
		</div>

		<div class="register-box-body">
			<p class="login-box-msg">EduId regisztráció</p>

			<form action="{{ path_for('registerPost') }}" onsubmit="return checkForm(this);" method="post">
				<div class="form-group has-feedback">
					<input type="text" class="form-control" placeholder="Név" value={{ name }}>
                    <small class="form-text text-muted">Javasolt név,de megváltoztathatod!</small>
					
				</div>
				<div class="form-group has-feedback">
					<input type="password" class="form-control" placeholder="Jelszó">
					
				</div>
				<div class="form-group has-feedback">
					<input type="password" class="form-control" placeholder="Jelszó újra">
					
				</div>
				<div class="row">
					<div class="col-xs-7">
						<div>
							<label>
							<input type="checkbox" name="terms">
								Elfogadom a felhasználási
								<a href="#">feltételeket!</a>
							</label>
						</div>
					</div>
					<!-- /.col -->
					<div class="col-xs-5">
						<button type="submit" class="btn btn-primary btn-block btn-flat">Regisztráció</button>
					</div>
					<!-- /.col -->
				</div>
			</form>

		</div>
		<!-- /.form-box -->
	</div>


{% endblock %}



{% block script %}

<script>

function checkForm(form)
  {
    if(!form.terms.checked) {
      alfi_alert("Kérlek fogadd el a felhasználási feltételeket!", 'Figyelem!','warning');
      form.terms.focus();
      return false;
    }
    return true;
  }


</script>



{% endblock %}
