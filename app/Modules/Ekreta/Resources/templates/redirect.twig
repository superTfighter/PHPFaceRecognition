{% extends 'app_simple.twig' %}


{% block page_content %}

<div class="register-box">

	<div class="register-box-body text-center">
		<i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
		<span class="sr-only">Loading...</span>
	</div>	
		<!-- /.form-box -->
</div>


{% endblock %}

{% block script %}

	<script>

	function checkHash()
	{
		if(window.location.hash)
		{
			url = processHashId(window.location.hash);

			window.location.replace(url);
		}
		else
		{
			alfi_alert("Sikertelen bejelentkez√©s!", 'Figyelem!','danger');
		}
	}

	function processHashId(hash)
	{
		hash = hash.slice(1);
		data = hash.split("&");
		access_token = data[1].split("=")[1];

		url = '{{ path_for("tokenCheck" , { "token" : "asdasd123" }) }}';
		url = url.replace("asdasd123",access_token);

		return url;
	}

	checkHash();

	</script>

{% endblock %}